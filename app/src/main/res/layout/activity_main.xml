<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Spinner"
            android:textColor="@color/colorPrimary"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_regular"
                android:layout_width="150dp"
                android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>

        </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Spinner"
        android:textColor="@color/colorPrimary"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_custom"
            android:layout_width="150dp"
            android:background="@null"
            android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>

    </androidx.cardview.widget.CardView>

</LinearLayout>